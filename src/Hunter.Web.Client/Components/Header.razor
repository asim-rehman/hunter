@if (ShowLoader)
{
    <div class="loader">
        <div class="loader-svg">
            <svg class="lds-blocks" width="100%" height="100%"
                 xmlns="http://www.w3.org/2000/svg"
                 xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid">
                <rect x="29.5" y="29.5" width="20" height="20" fill="#424C55">
                    <animate attributeName="fill" values="#FF8300;#424C55;#424C55" keyTimes="0;0.25;1" dur="1s" repeatCount="indefinite" begin="0s" calcMode="discrete"></animate>
                </rect>
                <rect x="50.5" y="29.5" width="20" height="20" fill="#424C55">
                    <animate attributeName="fill" values="#FF8300;#424C55;#424C55" keyTimes="0;0.25;1" dur="1s" repeatCount="indefinite" begin="0.25s" calcMode="discrete"></animate>
                </rect>
                <rect x="29.5" y="50.5" width="20" height="20" fill="#424C55">
                    <animate attributeName="fill" values="#FF8300;#424C55;#424C55" keyTimes="0;0.25;1" dur="1s" repeatCount="indefinite" begin="0.75s" calcMode="discrete"></animate>
                </rect>
                <rect x="50.5" y="50.5" width="20" height="20" fill="#424C55">
                    <animate attributeName="fill" values="#FF8300;#424C55;#424C55" keyTimes="0;0.25;1" dur="1s" repeatCount="indefinite" begin="0.5s" calcMode="discrete"></animate>
                </rect>
            </svg>
        </div>
    </div>
}


<nav class="navbar titlebar">
    <div class="container-fluid">
        <div class="navbar-brand">
            <h4>@Title</h4>
        </div>
    </div>
</nav>

@functions
{
    [Parameter]
    public string Title { get; set; } = "Devices";

    [Parameter]
    public bool ShowLoader { get; set; }
}